{% extends 'admin/base.html.twig' %}


{% block title %}Carrier{% endblock %}

{% block body %}
<main class="page-content bg-light">
    <h1>Carrier</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ carrier.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ carrier.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ carrier.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ carrier.price }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_carrier_index') }}">back to list</a>

    <a href="{{ path('app_carrier_edit', {'id': carrier.id}) }}"><span class="mdi mdi-book-edit"></span></a>

    {{ include('carrier/_delete_form.html.twig') }}


</main>
{% endblock %}
