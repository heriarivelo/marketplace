{% extends 'admin/base.html.twig' %}


{% block title %}Carrier index{% endblock %}

{% block body %}
<main class="page-content bg-light">
    <div class="container-fluid">
        <div class="layout-specing">
            <div class="d-md-flex justify-content-between">
                <div>
                    <h5 class="mb-0">Shop</h5>

                    <nav aria-label="breadcrumb" class="d-inline-block mt-1">
                        <ul class="breadcrumb breadcrumb-muted bg-transparent rounded mb-0 p-0">
                            <li class="breadcrumb-item text-capitalize"><a href="index.html">Landrick</a></li>
                            <li class="breadcrumb-item text-capitalize active" aria-current="page">Shop</li>
                        </ul>
                    </nav>
                </div>

                <div class="mt-4 mt-sm-0">
                    <a class="btn btn-primary" href="{{ path('app_carrier_new') }}">Create new</a>
                    {# <a class="btn btn-primary" href="{{ path('app_category_new') }}">Create new</a> #}
                </div>

            </div>

            <div class="row mt-4">
                <div class="col-12 mb-6">
                    {# <h5 class="mb-0">Most Viewed Products</h5> #}
                    <h5 class="mb-0">Liste des transport disponible</h5>
                </div><!--end col-->
            </div><!--end row-->
            <div class="row row-cols-xl-5 row-cols-lg-4 row-cols-md-2 row-cols-1">

                <table class="table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Price</th>
                            {# <th>actions</th> #}
                        </tr>
                    </thead>
                    <tbody>
                        {% for carrier in carriers %}
                        <tr>
                            <td>{{ carrier.id }}</td>
                            <td>{{ carrier.name }}</td>
                            <td>{{ carrier.description }}</td>
                            <td>{{ carrier.price }}</td>
                            <td>
                                <a href="{{ path('app_carrier_show', {'id': carrier.id}) }}"><span
                                        class="mdi mdi-eye-outline"></span></a>
                            </td>
                            <td>
                                <a href="{{ path('app_carrier_edit', {'id': carrier.id}) }}"><span
                                        class="mdi mdi-book-edit"></span></a>
                            </td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="5">no records found</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>


            </div>
        </div>
    </div><!--end container-->
    <!--end container-->

    <!-- Footer Start -->
    {% include 'admin/composant/footer.html.twig' %}
</main>
{% endblock %}