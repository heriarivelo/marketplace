{% extends 'base.html.twig' %}

{% block title %}Address{% endblock %}

{% block body %}
<section class="bg-half-170 bg-light d-table w-100">
    <div class="container">
        <div class="row mt-5 justify-content-center">
            <div class="col-lg-12 text-center">
                <div class="pages-heading">
                    <h4 class="title mb-0"> Mes address </h4>
                </div>
            </div><!--end col-->
        </div><!--end row-->

        <div class="position-breadcrumb">
            <nav aria-label="breadcrumb" class="d-inline-block">
                <ul class="breadcrumb rounded shadow mb-0 px-4 py-2">
                    <li class="breadcrumb-item"><a href="index.html">Shop</a></li>
                    <li class="breadcrumb-item"><a href="/account">Account</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Address</li>
                </ul>
            </nav>
        </div>
    </div> <!--end container-->
</section>
<div class="position-relative">
    <div class="shape overflow-hidden text-color-white">
        <svg viewBox="0 0 2880 48" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M0 48H1437.5H2880V0H2160C1442.5 52 720 0 720 0H0V48Z" fill="currentColor"></path>
        </svg>
    </div>
</div>
<section class="section">
    <div class="container">
        <div class="row">
            <div class="col-md-5 col-lg-4 order-md-last">
                            <a href="/account/add-address"><button type="submit" class="btn btn-blocks btn-info">Add address</button></a>
            </div><!--end col-->

            <div class="col-md-7 col-lg-8">
              
          {% if app.user.addresses|length == 0 %}
                                    <p>Vous n'avez encore d'addresse</p>
                                    {% else %}
                                    {% for address in app.user.addresses %}
                                     <div class="d-flex justify-content-between lh-sm p-3 border-bottom">

                            <div>
                                <h6 class="my-0"> 
                                </h6>
                                <small class="text-muted">{{address.name}}</small>
                            </div>
                            <span><p>{{address.country}}</p>  {{address.address}}-{{address.postal}}</span>
                        </div>
                        <div class="d-flex justify-content-between lh-sm p-3 border-bottom">
                            <a href="{{path ('edit_address' , {'id' :address.id})}}"><div> Modifier </div></a>
                            <a href="{{path ('delete_address' , {'id' :address.id})}}"><div> Supprimer </div></a>
                        </div>
                        
                        {% endfor %}
                                    {% endif %}
               
            </div><!--end col-->

        </div><!--end row-->
    </div><!--end container-->
</section>
{% endblock %}